<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClashSubManager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ClashSubManager</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">@Localizer["Home"]</a>
                        </li>
                        @if (Context.Request.Cookies.ContainsKey("AdminSession"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">@Localizer["Overview"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/admin/cloudflare-ip">@Localizer["CloudflareIP"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/ClashTemplate">@Localizer["ClashTemplate"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/UserConfig">@Localizer["UserConfig"]</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://github.com/soren-work/clash-sub-manager" target="_blank" rel="noopener noreferrer" title="GitHub">
                                <span class="bi bi-github"></span>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" title="@Localizer["Language"]">
                                <span class="bi bi-globe"></span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                                <li>
                                    <a class="dropdown-item" href="javascript:switchLanguage('en-US')">@Localizer["English"]</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="javascript:switchLanguage('zh-CN')">@Localizer["Chinese"]</a>
                                </li>
                            </ul>
                        </li>
                        @if (Context.Request.Cookies.ContainsKey("AdminSession"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Logout">@Localizer["Logout"]</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Login">@Localizer["Login"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top text-muted mt-auto">
        <div class="container py-3">
            <div class="d-flex justify-content-center align-items-center flex-wrap gap-2">
                <small>Copyright © 2026 Soren</small>
                <small class="text-muted">·</small>
                <small>
                    <a class="text-muted text-decoration-none" href="https://github.com/soren-work/clash-sub-manager" target="_blank" rel="noopener noreferrer">
                        <span class="bi bi-github me-1"></span>GitHub
                    </a>
                </small>
                <small class="text-muted">·</small>
                <small>
                    <a class="text-muted text-decoration-none" href="https://www.gnu.org/licenses/gpl-3.0.html" target="_blank" rel="noopener noreferrer">GPL-3.0</a>
                </small>
            </div>
        </div>
    </footer>
    
    <!-- Global Alert Container for fixed positioning -->
    <div id="alertContainer" class="position-fixed" style="top: 120px; right: 20px; z-index: 1055; min-width: 300px; max-width: 500px;"></div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/scripts/language-switch.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
