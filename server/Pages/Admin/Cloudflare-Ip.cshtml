@page "/admin/cloudflare-ip"
@using ClashSubManager.Models
@model CloudflareIpModel
@{
    ViewData["Title"] = @Localizer["PageTitle"];
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-hdd-network"></i> @Localizer["PageTitle"]</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="refreshData()">
                <i class="bi bi-arrow-clockwise"></i> @Localizer["Refresh"]
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="exportData()">
                <i class="bi bi-download"></i> @Localizer["Export"]
            </button>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(TempData["Success"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <!-- User Selector -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SelectedUserId" class="form-label">@Localizer["SelectUser"]</label>
            <select asp-for="SelectedUserId" class="form-select" onchange="location.href='?SelectedUserId=' + this.value">
                <option value="">@Localizer["GlobalConfiguration"]</option>
                @foreach (var user in Model.AvailableUsers)
                {
                    <option value="@user">@user</option>
                }
            </select>
        </div>
    </div>

    <!-- Current IP List - Moved Up -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> @Localizer["CurrentIPList"] (@Model.IPRecords.Count @Localizer["Items"])</h5>
                    @if (Model.IPRecords.Any())
                    {
                        <div class="d-flex gap-2">
                            <input type="text" id="ipSearch" class="form-control form-control-sm" placeholder="@Localizer["SearchIP"]" style="width: 200px;">
                            <select id="sortBy" class="form-select form-select-sm" style="width: 150px;">
                                <option value="ip">@Localizer["SortByIP"]</option>
                                <option value="latency">@Localizer["SortByLatency"]</option>
                                <option value="loss">@Localizer["SortByLossRate"]</option>
                                <option value="speed">@Localizer["SortBySpeed"]</option>
                            </select>
                        </div>
                    }
                </div>
                <div class="card-body">
                    @if (Model.IPRecords.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="ipTable">
                                <thead class="table-light">
                                    <tr>
                                        <th><i class="bi bi-hash"></i> @Localizer["ID"]</th>
                                        <th><i class="bi bi-globe"></i> @Localizer["IPAddress"]</th>
                                        <th><i class="bi bi-arrow-up-circle"></i> @Localizer["Sent"]</th>
                                        <th><i class="bi bi-arrow-down-circle"></i> @Localizer["Received"]</th>
                                        <th><i class="bi bi-exclamation-triangle"></i> @Localizer["PacketLossRate"]</th>
                                        <th><i class="bi bi-speedometer2"></i> @Localizer["AverageLatency"]</th>
                                        <th><i class="bi bi-download"></i> @Localizer["DownloadSpeed"]</th>
                                        <th><i class="bi bi-star"></i> @Localizer["Quality"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ip in Model.IPRecords)
                                    {
                                        var quality = ip.CalculateQuality();
                                        <tr>
                                            <td><span class="badge bg-secondary">@ip.Id</span></td>
                                            <td><code>@ip.IPAddress</code></td>
                                            <td>@ip.Sent</td>
                                            <td>@ip.Received</td>
                                            <td>
                                                <span class="badge @quality.CssClass">
                                                    @ip.PacketLossRate
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @quality.CssClass">
                                                    @ip.AverageLatency
                                                </span>
                                            </td>
                                            <td>@ip.DownloadSpeed</td>
                                            <td><span class="badge @quality.CssClass">@quality.Quality</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-2">@Localizer["NoIPConfiguration"]</p>
                            <small>@Localizer["UploadCSVHint"]</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- CSV Content Management -->
    <div class="row mb-3">
        <div class="col-12">
            <form method="post">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <label asp-for="CSVContent" class="form-label">@Localizer["CSVContent"]</label>
                    <textarea asp-for="CSVContent" class="form-control font-monospace" rows="10" 
                              placeholder="@Localizer["CSVContentPlaceholder"]"></textarea>
                    <div class="form-text">@Localizer["CSVContentHelp"]</div>
                    <span asp-validation-for="CSVContent" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 mb-3">
                    <button type="button" class="btn btn-primary" onclick="showConfirmModal('@Localizer["ConfirmSaveTitle"]', '@Localizer["ConfirmSaveMessage"]', 'SetIPs')">
                        <i class="bi bi-save"></i> @Localizer["SaveConfiguration"]
                    </button>
                    <button type="button" class="btn btn-danger" onclick="showConfirmModal('@Localizer["ConfirmDeleteTitle"]', '@Localizer["ConfirmDeleteMessage"]', 'DeleteIPs')">
                        <i class="bi bi-trash"></i> @Localizer["DeleteConfiguration"]
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="resetContent()">
                        <i class="bi bi-arrow-counterclockwise"></i> @Localizer["Reset"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- File Upload -->
    <div class="row mb-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <label class="form-label">@Localizer["OrUploadCSVFile"]</label>
                    <input type="file" name="file" class="form-control" accept=".csv" />
                    <div class="form-text">@Localizer["CSVFileHelp"]</div>
                </div>
                <button type="button" class="btn btn-secondary" onclick="showConfirmModal('@Localizer["ConfirmUploadTitle"]', '@Localizer["ConfirmUploadMessage"]', 'Upload')">
                    <i class="bi bi-upload"></i> @Localizer["UploadFile"]
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">@Localizer["Confirm"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmModalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                </button>
                <button type="button" class="btn btn-primary" id="confirmModalButton">
                    <i class="bi bi-check-circle"></i> @Localizer["Confirm"]
                </button>
            </div>
        </div>
    </div>
</div>

<script>
const originalContent = `@Html.Raw(Model.OriginalCSVContent.Replace("\n", "\\n").Replace("\r", "\\r").Replace("'", "\\'"))`;

// Confirmation Modal functionality
let pendingHandler = null;
let confirmModal = null;

function showConfirmModal(title, message, handler) {
    // Initialize modal if not already done
    if (!confirmModal) {
        const modalElement = document.getElementById('confirmModal');
        if (modalElement) {
            confirmModal = new bootstrap.Modal(modalElement);
        }
    }
    
    // Set modal content
    document.getElementById('confirmModalLabel').textContent = title;
    document.getElementById('confirmModalMessage').textContent = message;
    
    // Store the handler for later use
    pendingHandler = handler;
    
    // Update confirm button style based on action type
    const confirmBtn = document.getElementById('confirmModalButton');
    if (handler === 'DeleteIPs') {
        confirmBtn.className = 'btn btn-danger';
        confirmBtn.innerHTML = '<i class="bi bi-trash"></i> @Localizer["Confirm"]';
    } else {
        confirmBtn.className = 'btn btn-primary';
        confirmBtn.innerHTML = '<i class="bi bi-check-circle"></i> @Localizer["Confirm"]';
    }
    
    // Show modal
    confirmModal.show();
}

function executeConfirmedAction() {
    if (!pendingHandler) return;
    
    // Hide modal first
    confirmModal.hide();
    
    // Find the appropriate form and submit
    if (pendingHandler === 'Upload') {
        // Upload form is the second form (with file input)
        const uploadForm = document.querySelector('form[enctype="multipart/form-data"]');
        if (uploadForm) {
            // Create hidden input for handler
            let handlerInput = uploadForm.querySelector('input[name="handler"]');
            if (!handlerInput) {
                handlerInput = document.createElement('input');
                handlerInput.type = 'hidden';
                handlerInput.name = 'handler';
                uploadForm.appendChild(handlerInput);
            }
            handlerInput.value = pendingHandler;
            
            // Set form action with handler
            uploadForm.action = '?handler=' + pendingHandler;
            uploadForm.submit();
        }
    } else {
        // SetIPs or DeleteIPs - use the main CSV form
        const mainForm = document.querySelector('form:not([enctype])');
        if (mainForm) {
            // Set form action with handler
            mainForm.action = '?handler=' + pendingHandler;
            mainForm.submit();
        }
    }
    
    pendingHandler = null;
}

document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('ipSearch');
    const sortSelect = document.getElementById('sortBy');
    const table = document.getElementById('ipTable');
    
    if (searchInput && sortSelect && table) {
        searchInput.addEventListener('input', filterTable);
        sortSelect.addEventListener('change', sortTable);
    }
    
    // Setup confirm modal button click handler
    const confirmBtn = document.getElementById('confirmModalButton');
    if (confirmBtn) {
        confirmBtn.addEventListener('click', executeConfirmedAction);
    }
});

function filterTable() {
    const searchValue = document.getElementById('ipSearch').value.toLowerCase();
    const rows = document.querySelectorAll('#ipTable tbody tr');
    
    rows.forEach(row => {
        const ipAddress = row.querySelector('td:nth-child(2) code').textContent.toLowerCase();
        row.style.display = ipAddress.includes(searchValue) ? '' : 'none';
    });
}

function sortTable() {
    const sortBy = document.getElementById('sortBy').value;
    const tbody = document.querySelector('#ipTable tbody');
    const rows = Array.from(tbody.querySelectorAll('tr'));
    
    rows.sort((a, b) => {
        let aValue, bValue;
        
        switch(sortBy) {
            case 'ip':
                aValue = a.querySelector('td:nth-child(2) code').textContent;
                bValue = b.querySelector('td:nth-child(2) code').textContent;
                return aValue.localeCompare(bValue);
            case 'latency':
                aValue = parseFloat(a.querySelector('td:nth-child(6) span').textContent.replace('ms', ''));
                bValue = parseFloat(b.querySelector('td:nth-child(6) span').textContent.replace('ms', ''));
                return aValue - bValue;
            case 'loss':
                aValue = parseFloat(a.querySelector('td:nth-child(5) span').textContent.replace('%', ''));
                bValue = parseFloat(b.querySelector('td:nth-child(5) span').textContent.replace('%', ''));
                return aValue - bValue;
            case 'speed':
                aValue = a.querySelector('td:nth-child(7)').textContent.trim();
                bValue = b.querySelector('td:nth-child(7)').textContent.trim();
                // Handle speed values with units
                const aSpeed = parseFloat(aValue.replace(/[^0-9.]/g, ''));
                const bSpeed = parseFloat(bValue.replace(/[^0-9.]/g, ''));
                return bSpeed - aSpeed; // Descending order for speed
            default:
                return 0;
        }
    });
    
    rows.forEach(row => tbody.appendChild(row));
}

function refreshData() {
    window.location.reload();
}

function resetContent() {
    const textarea = document.querySelector('textarea[name="CSVContent"]');
    if (textarea) {
        if (textarea.value !== originalContent) {
            textarea.value = originalContent;
            showAlert('@Localizer["ContentReset"]', 'info');
        } else {
            showAlert('@Localizer["NoChangesToReset"]', 'info');
        }
    }
}

// Enhanced showAlert function for fixed positioning
const enhancedShowAlert = async function(message, type) {
    try {
        // Find the alertContainer
        let container = document.getElementById('alertContainer');
        
        // If container doesn't exist, create it
        if (!container) {
            container = document.createElement('div');
            container.id = 'alertContainer';
            container.className = 'position-fixed';
            container.style.cssText = 'top: 80px; right: 20px; z-index: 1055; min-width: 300px; max-width: 500px;';
            document.body.appendChild(container);
        }
        
        // Clear existing alerts
        container.innerHTML = '';
        
        // Create new alert
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.setAttribute('role', 'alert');
        alertDiv.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
        
        // Add alert to container
        container.appendChild(alertDiv);
        
        // Initialize Bootstrap alert component
        if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
            new bootstrap.Alert(alertDiv);
        }
        
        // Auto-remove after 3 seconds
        setTimeout(() => {
            if (alertDiv.parentNode) {
                if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
                    const alert = bootstrap.Alert.getInstance(alertDiv);
                    if (alert) {
                        alert.close();
                    } else {
                        alertDiv.parentNode.removeChild(alertDiv);
                    }
                } else {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }
        }, 3000);
        
    } catch (error) {
        console.error('Error in showAlert:', error);
    }
};

// Override the global showAlert function with our enhanced version
Object.defineProperty(window, 'showAlert', {
    value: enhancedShowAlert,
    writable: false,
    configurable: false
});

function exportData() {
    const table = document.getElementById('ipTable');
    if (!table) return;
    
    let csv = 'IP Address,Sent,Received,Packet Loss Rate,Average Latency,Download Speed\n';
    const rows = table.querySelectorAll('tbody tr');
    
    rows.forEach(row => {
        const cells = row.querySelectorAll('td');
        const rowData = [
            cells[1].textContent.trim(),  // Skip ID (cells[0]), start from IP Address (cells[1])
            cells[2].textContent.trim(),
            cells[3].textContent.trim(),
            cells[4].textContent.trim(),
            cells[5].textContent.trim(),
            cells[6].textContent.trim()
        ];
        csv += rowData.join(',') + '\n';
    });
    
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'ip-list-export.csv';
    a.click();
    window.URL.revokeObjectURL(url);
}
</script>



