@page "/admin/clash-template"
@model ClashTemplateModel
@{
    ViewData["Title"] = "Clash Template Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-earmark-code"></i> Clash Template Management</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="formatYaml()">
                <i class="bi bi-code-slash"></i> Format
            </button>
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="validateYaml()">
                <i class="bi bi-check-circle"></i> Validate
            </button>
            <button type="button" class="btn btn-outline-info btn-sm" onclick="previewTemplate()">
                <i class="bi bi-eye"></i> Preview
            </button>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(TempData["Success"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <!-- User Selector -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SelectedUserId" class="form-label">Select User</label>
            <select asp-for="SelectedUserId" class="form-select" onchange="location.href='?SelectedUserId=' + this.value">
                <option value="">Global Template</option>
                @foreach (var user in Model.AvailableUsers)
                {
                    <option value="@user">@user</option>
                }
            </select>
        </div>
    </div>

    <!-- File Status -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert alert-info">
                Current Status: @(Model.FileExists ? "File exists" : "File does not exist")
                @if (Model.FileExists)
                {
                    <span> | File path: @(string.IsNullOrEmpty(Model.SelectedUserId) ? "/app/data/clash.yaml" : $"/app/data/{Model.SelectedUserId}/clash.yaml")</span>
                }
            </div>
        </div>
    </div>

    <!-- YAML Content Editing -->
    <div class="row mb-3">
        <div class="col-12">
            <form method="post">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label asp-for="EditedContent" class="form-label">YAML Template Content</label>
                        <div class="d-flex align-items-center gap-3">
                            <small class="text-muted">
                                <i class="bi bi-file-text"></i> 
                                Characters: <span id="charCount">0</span> | 
                                Lines: <span id="lineCount">0</span>
                            </small>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="wordWrap" checked>
                                <label class="form-check-label" for="wordWrap">Word Wrap</label>
                            </div>
                        </div>
                    </div>
                    <div class="position-relative">
                        <textarea asp-for="EditedContent" 
                                  class="form-control font-monospace yaml-editor" 
                                  rows="20" 
                                  id="yamlEditor"
                                  placeholder="Please enter YAML content..."
                                  style="resize: vertical; font-family: 'Consolas', 'Monaco', 'Courier New', monospace;">@Model.YAMLContent</textarea>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> Supports all Clash configuration fields, file size limited to 1MB
                            <span class="ms-3">
                                <i class="bi bi-lightbulb"></i> Use Tab for indentation, Ctrl+F for search
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="EditedContent" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 mb-3">
                    <button type="submit" asp-page-handler="Save" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Template
                    </button>
                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger" 
                            onclick="return confirm('Are you sure you want to delete this template?')">
                        <i class="bi bi-trash"></i> Delete Template
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="resetContent()">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- File Upload -->
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <label class="form-label">Or Upload YAML File</label>
                    <input type="file" name="file" class="form-control" accept=".yaml,.yml" />
                    <div class="form-text">Supports .yaml and .yml files, maximum 1MB</div>
                </div>
                <button type="submit" asp-page-handler="Upload" class="btn btn-secondary">
            <i class="bi bi-upload"></i> Upload File
        </button>
    </form>
</div>
</div>

<!-- YAML Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-eye"></i> YAML Template Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <pre id="previewContent" class="bg-light p-3 rounded" style="max-height: 500px; overflow-y: auto; font-family: monospace;"></pre>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
const originalContent = `@Html.Raw(Model.YAMLContent.Replace("\n", "\\n").Replace("\r", "\\r").Replace("'", "\\'"))`;

document.addEventListener('DOMContentLoaded', function() {
    const editor = document.getElementById('yamlEditor');
    const charCount = document.getElementById('charCount');
    const lineCount = document.getElementById('lineCount');
    const wordWrap = document.getElementById('wordWrap');
    
    if (editor && charCount && lineCount) {
        updateCounts();
        editor.addEventListener('input', updateCounts);
        editor.addEventListener('scroll', syncScroll);
        
        wordWrap.addEventListener('change', function() {
            editor.style.whiteSpace = this.checked ? 'pre-wrap' : 'pre';
        });
    }
});

function updateCounts() {
    const editor = document.getElementById('yamlEditor');
    const charCount = document.getElementById('charCount');
    const lineCount = document.getElementById('lineCount');
    
    if (editor && charCount && lineCount) {
        const content = editor.value;
        charCount.textContent = content.length;
        lineCount.textContent = content.split('\n').length;
    }
}

function formatYaml() {
    const editor = document.getElementById('yamlEditor');
    if (!editor) return;
    
    try {
        // Simple YAML formatting - normalize indentation
        let content = editor.value;
        const lines = content.split('\n');
        const formattedLines = [];
        let currentIndent = 0;
        
        for (let line of lines) {
            const trimmed = line.trim();
            if (trimmed === '') {
                formattedLines.push('');
                continue;
            }
            
            // Calculate proper indentation
            if (trimmed.endsWith(':')) {
                // Key-value pair or parent object
                formattedLines.push('  '.repeat(currentIndent) + trimmed);
            } else if (trimmed.startsWith('-')) {
                // Array item
                formattedLines.push('  '.repeat(currentIndent) + trimmed);
            } else {
                // Value
                formattedLines.push('  '.repeat(currentIndent + 1) + trimmed);
            }
            
            // Update indentation for next line
            if (trimmed.endsWith(':') && !trimmed.startsWith('-')) {
                currentIndent++;
            } else if (trimmed === '---' || trimmed === '...') {
                currentIndent = 0;
            }
        }
        
        editor.value = formattedLines.join('\n');
        updateCounts();
        showAlert('YAML formatted successfully!', 'success');
    } catch (error) {
        showAlert('Error formatting YAML: ' + error.message, 'danger');
    }
}

function validateYaml() {
    const editor = document.getElementById('yamlEditor');
    if (!editor) return;
    
    const content = editor.value;
    
    // Basic YAML validation
    const lines = content.split('\n');
    let isValid = true;
    let errorMessage = '';
    
    for (let i = 0; i < lines.length; i++) {
        const line = lines[i];
        const trimmed = line.trim();
        
        if (trimmed === '') continue;
        
        // Check for common YAML syntax errors
        if (trimmed.match(/^\s*[^:\s-]+[^:]*$/)) {
            // Line without colon that's not an array item
            if (!trimmed.startsWith('-')) {
                isValid = false;
                errorMessage = `Line ${i + 1}: Invalid YAML syntax - missing colon`;
                break;
            }
        }
        
        // Check for invalid characters
        if (line.match(/\t/)) {
            isValid = false;
            errorMessage = `Line ${i + 1}: Tab character detected, use spaces instead`;
            break;
        }
    }
    
    if (isValid) {
        showAlert('YAML syntax is valid!', 'success');
    } else {
        showAlert('YAML validation failed: ' + errorMessage, 'danger');
    }
}

function previewTemplate() {
    const editor = document.getElementById('yamlEditor');
    const previewContent = document.getElementById('previewContent');
    const modal = new bootstrap.Modal(document.getElementById('previewModal'));
    
    if (editor && previewContent) {
        previewContent.textContent = editor.value;
        modal.show();
    }
}

function resetContent() {
    const editor = document.getElementById('yamlEditor');
    if (editor && confirm('Are you sure you want to reset to the original content?')) {
        editor.value = originalContent;
        updateCounts();
        showAlert('Content reset to original', 'info');
    }
}

function syncScroll() {
    // Could be used to sync line numbers with editor scroll
    // Implementation for line numbers would go here
}

function showAlert(message, type) {
    // Create and show a temporary alert
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
    alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 1050; min-width: 300px;';
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    `;
    
    document.body.appendChild(alertDiv);
    
    // Auto-remove after 3 seconds
    setTimeout(() => {
        if (alertDiv.parentNode) {
            alertDiv.parentNode.removeChild(alertDiv);
        }
    }, 3000);
}
</script>
</div>
</div>
