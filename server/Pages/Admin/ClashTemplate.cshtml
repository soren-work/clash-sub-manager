@page "/admin/clash-template"
@model ClashTemplateModel
@{
    ViewData["Title"] = Localizer["ClashTemplateManagement"];
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-earmark-code"></i> @Localizer["ClashTemplateManagement"]</h2>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="validateYaml()">
                <i class="bi bi-check-circle"></i> @Localizer["Validate"]
            </button>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(TempData["Success"] as string))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <!-- User Selector -->
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="SelectedUserId" class="form-label">@Localizer["SelectUser"]</label>
            <select asp-for="SelectedUserId" class="form-select" onchange="location.href='?SelectedUserId=' + this.value">
                <option value="">@Localizer["GlobalTemplate"]</option>
                @foreach (var user in Model.AvailableUsers)
                {
                    <option value="@user">@user</option>
                }
            </select>
        </div>
    </div>

    <!-- YAML Content Editing -->
    <div class="row mb-3">
        <div class="col-12">
            <form method="post" id="mainEditForm">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label asp-for="EditedContent" class="form-label">@Localizer["YAMLTemplateContent"]</label>
                        <div class="d-flex align-items-center gap-3">
                            <small class="text-muted">
                                <i class="bi bi-file-text"></i> 
                                @Localizer["Characters"]: <span id="charCount">0</span> | 
                                @Localizer["Lines"]: <span id="lineCount">0</span>
                            </small>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="wordWrap" checked>
                                <label class="form-check-label" for="wordWrap">@Localizer["WordWrap"]</label>
                            </div>
                        </div>
                    </div>
                    <div class="position-relative">
                        <textarea asp-for="EditedContent" 
                                  class="form-control font-monospace yaml-editor" 
                                  rows="20" 
                                  id="yamlEditor"
                                  placeholder="@Localizer["YAMLContentPlaceholder"]"
                                  style="resize: vertical; font-family: 'Consolas', 'Monaco', 'Courier New', monospace;">@Model.YAMLContent</textarea>
                        <div class="form-text">
                            <i class="bi bi-info-circle"></i> @Localizer["YAMLContentHelp"]
                            <span class="ms-3">
                                <i class="bi bi-lightbulb"></i> @Localizer["YAMLEditorHint"]
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="EditedContent" class="text-danger"></span>
                </div>
                <div class="d-flex gap-2 mb-3">
                    <button type="button" class="btn btn-primary" onclick="showConfirmModal('@Localizer["ConfirmSaveTitle"]', '@Localizer["ConfirmSaveMessage"]', 'Save')">
                        <i class="bi bi-save"></i> @Localizer["SaveTemplate"]
                    </button>
                    <button type="button" class="btn btn-danger" onclick="showConfirmModal('@Localizer["ConfirmDeleteTitle"]', '@Localizer["ConfirmDeleteMessage"]', 'Delete')">
                        <i class="bi bi-trash"></i> @Localizer["DeleteTemplate"]
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="resetContent()">
                        <i class="bi bi-arrow-counterclockwise"></i> @Localizer["Reset"]
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- File Upload -->
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="SelectedUserId" />
                <div class="mb-3">
                    <label class="form-label">@Localizer["OrUploadYAMLFile"]</label>
                    <input type="file" name="file" class="form-control" accept=".yaml,.yml" />
                    <div class="form-text">@Localizer["YAMLFileHelp"]</div>
                </div>
                <button type="button" class="btn btn-secondary" onclick="showConfirmModal('@Localizer["ConfirmUploadTitle"]', '@Localizer["ConfirmUploadMessage"]', 'Upload')">
                    <i class="bi bi-upload"></i> @Localizer["UploadFile"]
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">@Localizer["Confirm"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmModalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> @Localizer["Cancel"]
                </button>
                <button type="button" class="btn btn-primary" id="confirmModalButton">
                    <i class="bi bi-check-circle"></i> @Localizer["Confirm"]
                </button>
            </div>
        </div>
    </div>
</div>



<script>
const originalContent = `@Html.Raw(Model.YAMLContent.Replace("\n", "\\n").Replace("\r", "\\r").Replace("'", "\\'"))`;

// Confirmation Modal functionality
let pendingHandler = null;
let confirmModal = null;

function showConfirmModal(title, message, handler) {
    // Initialize modal if not already done
    if (!confirmModal) {
        const modalElement = document.getElementById('confirmModal');
        if (modalElement) {
            confirmModal = new bootstrap.Modal(modalElement);
        }
    }
    
    // Set modal content
    document.getElementById('confirmModalLabel').textContent = title;
    document.getElementById('confirmModalMessage').textContent = message;
    
    // Store the handler for later use
    pendingHandler = handler;
    
    // Update confirm button style based on action type
    const confirmBtn = document.getElementById('confirmModalButton');
    if (handler === 'Delete') {
        confirmBtn.className = 'btn btn-danger';
        confirmBtn.innerHTML = '<i class="bi bi-trash"></i> @Localizer["Confirm"]';
    } else {
        confirmBtn.className = 'btn btn-primary';
        confirmBtn.innerHTML = '<i class="bi bi-check-circle"></i> @Localizer["Confirm"]';
    }
    
    // Show modal
    confirmModal.show();
}

function executeConfirmedAction() {
    if (!pendingHandler) return;
    
    // Hide modal first
    confirmModal.hide();
    
    // Find the appropriate form and submit
    if (pendingHandler === 'Upload') {
        // Upload form is the second form (with file input)
        const uploadForm = document.querySelector('form[enctype="multipart/form-data"]');
        if (uploadForm) {
            // Set form action with handler
            uploadForm.action = '?handler=' + pendingHandler;
            uploadForm.submit();
        }
    } else {
        // Save or Delete - use the main edit form
        const mainForm = document.getElementById('mainEditForm');
        if (mainForm) {
            // Set form action with handler
            mainForm.action = '?handler=' + pendingHandler;
            mainForm.submit();
        }
    }
    
    pendingHandler = null;
}

document.addEventListener('DOMContentLoaded', function() {
    const editor = document.getElementById('yamlEditor');
    const charCount = document.getElementById('charCount');
    const lineCount = document.getElementById('lineCount');
    const wordWrap = document.getElementById('wordWrap');
    
    if (editor && charCount && lineCount) {
        updateCounts();
        editor.addEventListener('input', updateCounts);
        // syncScroll function not implemented yet, removing for now
        // editor.addEventListener('scroll', syncScroll);
        
        wordWrap.addEventListener('change', function() {
            editor.style.whiteSpace = this.checked ? 'pre-wrap' : 'pre';
        });
    }
    
    // Setup confirm modal button click handler
    const confirmBtn = document.getElementById('confirmModalButton');
    if (confirmBtn) {
        confirmBtn.addEventListener('click', executeConfirmedAction);
    }
});

function updateCounts() {
    const editor = document.getElementById('yamlEditor');
    const charCount = document.getElementById('charCount');
    const lineCount = document.getElementById('lineCount');
    
    if (editor && charCount && lineCount) {
        const content = editor.value;
        charCount.textContent = content.length;
        lineCount.textContent = content.split('\n').length;
    }
}

function validateYaml() {
    const editor = document.getElementById('yamlEditor');
    if (!editor) return;
    
    const content = editor.value;
    
    // Basic YAML validation
    const lines = content.split('\n');
    let isValid = true;
    let errorMessage = '';
    
    for (let i = 0; i < lines.length; i++) {
        const line = lines[i];
        const trimmed = line.trim();
        
        if (trimmed === '') continue;
        
        // Check for common YAML syntax errors
        if (trimmed.match(/^\s*[^:\s-]+[^:]*$/)) {
            // Line without colon that's not an array item
            if (!trimmed.startsWith('-')) {
                isValid = false;
                errorMessage = `Line ${i + 1}: Invalid YAML syntax - missing colon`;
                break;
            }
        }
        
        // Check for invalid characters
        if (line.match(/\t/)) {
            isValid = false;
            errorMessage = `Line ${i + 1}: Tab character detected, use spaces instead`;
            break;
        }
    }
    
    if (isValid) {
        window.showAlert('YAML syntax is valid!', 'success');
    } else {
        window.showAlert('YAML validation failed: ' + errorMessage, 'danger');
    }
}

function resetContent() {
    const editor = document.getElementById('yamlEditor');
    if (editor) {
        editor.value = originalContent;
        updateCounts();
        showAlert('Content reset to original', 'info');
    }
}



// Enhanced showAlert function for fixed positioning
const enhancedShowAlert = async function(message, type) {
    try {
        // Find the alertContainer
        let container = document.getElementById('alertContainer');
        
        // If container doesn't exist, create it
        if (!container) {
            container = document.createElement('div');
            container.id = 'alertContainer';
            container.className = 'position-fixed';
            container.style.cssText = 'top: 80px; right: 20px; z-index: 1055; min-width: 300px; max-width: 500px;';
            document.body.appendChild(container);
        }
        
        // Clear existing alerts
        container.innerHTML = '';
        
        // Create new alert
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.setAttribute('role', 'alert');
        alertDiv.innerHTML = `
            ${message}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
        
        // Add alert to container
        container.appendChild(alertDiv);
        
        // Initialize Bootstrap alert component
        if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
            new bootstrap.Alert(alertDiv);
        }
        
        // Auto-remove after 3 seconds
        setTimeout(() => {
            if (alertDiv.parentNode) {
                if (typeof bootstrap !== 'undefined' && bootstrap.Alert) {
                    const alert = bootstrap.Alert.getInstance(alertDiv);
                    if (alert) {
                        alert.close();
                    } else {
                        alertDiv.parentNode.removeChild(alertDiv);
                    }
                } else {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }
        }, 3000);
        
    } catch (error) {
        console.error('Error in showAlert:', error);
    }
};

// Override the global showAlert function with our enhanced version
Object.defineProperty(window, 'showAlert', {
    value: enhancedShowAlert,
    writable: false,
    configurable: false
});
</script>
</div>
</div>
