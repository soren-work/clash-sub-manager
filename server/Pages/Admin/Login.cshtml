@page
@model ClashSubManager.Pages.Admin.LoginModel
@{
    ViewData["Title"] = Localizer["Admin Login"];
}

<div class="container">
    <h1>@Localizer["Admin Login"]</h1>
    <form method="post">
        <div class="form-group">
            <label for="username">@Localizer["Username"]</label>
            <input type="text" id="username" name="username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">@Localizer["Password"]</label>
            <input type="password" id="password" name="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
    </form>
</div>
